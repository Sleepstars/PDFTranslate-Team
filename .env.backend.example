# 管理员账号配置
PDF_APP_ADMIN_EMAIL=admin@example.com
PDF_APP_ADMIN_PASSWORD=changeme
PDF_APP_ADMIN_NAME=PDF Admin

# 数据库配置
PDF_APP_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/pdftranslate

# Redis 配置
PDF_APP_REDIS_URL=redis://localhost:6379/0

# S3 存储配置 (使用 MinIO)
PDF_APP_S3_ENDPOINT=http://localhost:9000
PDF_APP_S3_ACCESS_KEY=minioadmin
PDF_APP_S3_SECRET_KEY=minioadmin
PDF_APP_S3_BUCKET=pdftranslate
PDF_APP_S3_REGION=us-east-1
PDF_APP_S3_FILE_TTL_DAYS=7

# BabelDoc 翻译配置
PDF_APP_BABELDOC_SERVICE=google
PDF_APP_BABELDOC_LANG_FROM=en
PDF_APP_BABELDOC_LANG_TO=zh
PDF_APP_BABELDOC_MODEL=
PDF_APP_BABELDOC_THREADS=4

# 自定义翻译服务 Endpoint（可选）
PDF_APP_OPENAI_API_BASE=
PDF_APP_DEEPL_API_URL=
PDF_APP_OLLAMA_HOST=
PDF_APP_AZURE_OPENAI_ENDPOINT=

# 会话配置
PDF_APP_SESSION_TTL_SECONDS=43200
PDF_APP_SESSION_COOKIE_SECURE=false

# CORS 配置
PDF_APP_CORS_ORIGINS=["http://localhost:3000"]
